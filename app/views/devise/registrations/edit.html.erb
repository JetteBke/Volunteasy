<div class="container">
<h4 class="text-center">Edit your profile</h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
<%= f.input :dob,
                   required: true,
                   :as => :date,
                   :start_year => Date.today.year,
                   :end_year => Date.today.year - 99,
                   :month => Date.today.month,
                   input_html: {style: "margin:6px;"},
                   label: "Date of Birth" %>
    <%= f.input :city,
                required: true,
                input_html: { autocomplete: "City"} %>
    <%= f.input :phone,
                input_html: { autocomplete: "Phone number"} %>
    <%= f.input :interests,
                required: true,
                input_html: { autocomplete: "Interests"} %>
    <%= f.input :bio,
                required: true,
                input_html: { autocomplete: "Your bio"} %>
    <%= f.label :photo %>
    <%= f.file_field :photo,
                required: true %>
  </div>

  <div class="form-actions text-center mb-4">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<div class="text-center">
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
</div>
