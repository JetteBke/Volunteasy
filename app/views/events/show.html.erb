<div class="container mt-5">
  <!-- <h1 class="text-center">My Profile</h1> -->
  <div class="row">
    <div class="col-lg-4 col-md-12 col-sm-12 text-center">
      <%= image_tag @event.photo, :class => "avatar-extra-large"%>
    </div>

    <div class=" card col-lg-4 col-md-12 col-sm-12">
      <div class="row">
        <div class="col text-center"><h2><%= @event.title %></h2></div>
        <div class="w-100"></div>
        <div class="col-4">Hosted by: </div>
        <div class="col-8"><%= @event.organization.name %></div>
        <div class="w-100"></div>
        <div class="col-4">Address:</div>
        <div class="col-8"><%= @event.address %></div>
        <div class="w-100"></div>
        <div class="col-4">Starts at:</div>
        <div class="col-8"><%= @event.start_at.to_formatted_s(:long_ordinal) %></div>
        <div class="w-100"></div>
        <div class="col-4">Ends at:</div>
        <div class="col-8"><%= @event.ends_at.to_formatted_s(:long_ordinal) %></div>
        <div class="w-100"></div>
        <div class="col-4">Spots:</div>
        <div class="col-8"><%= @event.spots %></div>
        <div class="w-100"></div>
      </div>
    </div>

    <div class="col card ">
      <p><%= link_to "Apply now", event_bookings_path(@event), method: :post, class:"btn btn-success" %></p>
      <%= link_to "See organization", organization_path(@event.organization) %>
      <%= link_to "Go back to see all events", events_path %>
    </div>
    <div class="container  mt-5">
  <h3>Event Description:</h3>
  <p><%= @event.description  %></p>
</div>

  </div>

</div>




<div class="container">
  <ul class="list-group list-group-flush">
    <% if @event.organization.user == current_user %>
    <% if @bookings.empty? %>
    <p>No Bookings yet</p>
    <% else %>
    <% @bookings.each do |booking| %>
    <li class="list-group-item">
      Booking: <%= link_to "#{booking.user.first_name} #{booking.user.last_name}" , user_path(booking.user) %>
      Status: <%= booking.status %>
      <% if booking.status == "Pending" %>
      <%= link_to 'Confirm', approve_booking_path(booking, event_id:@event.id), method: :post %>
      <%= link_to 'Reject', reject_booking_path(booking, event_id:@event.id), method: :post %>
      <% end %>
    </li>
    <% end %>
    <% end %>
    <% end %>
  </ul>
</div>
</div>

